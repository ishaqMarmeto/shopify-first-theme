<div class="shop-the-look">
  <div class="image-container">
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="{{ section.settings.image_alt_text }}">
    {% for block in section.blocks %}
      <div class="dot" style="top: {{ block.settings.dot_position }};" data-product-id="{{ block.id }}"></div>
    {% endfor %}
  </div>
  <div class="product-info-container">
    <div class="product-info">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}
        <div class="product-card" id="product-{{ block.id }}" style="display: none;">
          <div class="image">
            <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}">
          </div>
          <div class="details">
            <h3>{{ product.title }}</h3>
            <p>{{ product.vendor }}</p>
            <p>{{ product.price | money }}</p>
            <a href="{{ product.url }}" class="btn">View Product</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>




{% schema %}
    {
      "name": "Shop The Look",
      "settings": [
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main Image"
        },
        {
          "type": "text",
          "id": "image_alt_text",
          "label": "Image Alt Text"
        },
        {
          "type": "product_list",
          "id": "products",
          "label": "Products to display"
        }
      ],
      "blocks": [
        {
          "type": "product",
          "name": "Product",
          "settings": [
            {
              "type": "text",
              "id": "dot_position",
              "label": "Dot Position (e.g., 50% 50%)"
            },
            {
              "type": "product",
              "id": "product",
              "label": "Select product"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Default",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}
    